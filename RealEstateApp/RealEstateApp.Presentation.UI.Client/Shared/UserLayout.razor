@inherits LayoutComponentBase

<div class="main-layout">
    <!-- Header -->
    <header id="header" class="fixed-top">
        <div class="container d-flex align-items-center justify-content-between">
            <h1 class="logo"><a href="/">🏠 RealEstateApp</a></h1>
            <nav id="navbar" class="navbar">
                <ul>
                    <li><a class="nav-link active" href="/">Home</a></li>
                    <li><a class="nav-link" href="/listings">Listings</a></li>
                    <li><a class="nav-link" href="/contact">Contact</a></li>
                </ul>
                <button class="mobile-nav-toggle d-lg-none" onclick="toggleMenu()">☰</button>
            </nav>
        </div>
    </header>

    <!-- Hero Section -->
  

    <!-- Main Content -->
    <main class="main-content">
        @Body
    </main>

    <!-- Footer -->

</div>

<style>
    /* General */
    body {
        font-family: 'Poppins', sans-serif;
        color: #444;
    }

    /* Header */
    #header {
        background: white;
        padding: 15px 0;
        box-shadow: 0px 2px 15px rgba(0, 0, 0, 0.1);
        transition: all 0.5s;
    }

    .logo a {
        color: black;
        font-size: 1.8rem;
        font-weight: bold;
        text-decoration: none;
    }

    .navbar ul {
        list-style: none;
        display: flex;
        align-items: center;
        margin: 0;
        padding: 0;
    }

    .navbar ul li {
        margin: 0 15px;
    }

    .navbar a {
        color: black;
        text-decoration: none;
        font-size: 1rem;
        transition: 0.3s;
    }

    .navbar a:hover {
        color: #f39c12;
    }

    .mobile-nav-toggle {
        display: none;
        background: none;
        border: none;
        font-size: 1.8rem;
        color: white;
        cursor: pointer;
    }

    /* Hero Section */
    .hero-section {
        height: 70vh;
        background: url('https://bootstrapmade.com/demo/EstateAgency/assets/img/hero-bg.jpg') center/cover no-repeat;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: white;
        position: relative;
    }

    .hero-section h1 {
        font-size: 2.5rem;
        font-weight: bold;
    }

    .hero-section p {
        font-size: 1.2rem;
        margin-bottom: 20px;
    }

    .btn-primary {
        background: #f39c12;
        border: none;
        padding: 12px 24px;
        font-size: 1.1rem;
        border-radius: 5px;
        transition: 0.3s;
    }

    .btn-primary:hover {
        background: #e67e22;
    }

    /* Footer */
    .footer {
        background: #1c2331;
        color: white;
        padding: 20px 0;
        margin-top: 50px;
    }

    media (max-width: 992px) {
        .navbar ul {
            display: none;
            flex-direction: column;
            position: absolute;
            top: 60px;
            right: 0;
            background: #283a5a;
            width: 200px;
            padding: 15px;
            border-radius: 5px;
        }

        .navbar ul.active {
            display: flex;
        }

        .mobile-nav-toggle {
            display: block;
        }
    }
</style>

